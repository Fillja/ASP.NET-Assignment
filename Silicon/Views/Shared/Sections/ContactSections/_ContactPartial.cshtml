@model ContactViewModel

<section id="contact">
    <div class="container">

        <div class="link-box">
            <i class="fa-light fa-house"></i>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <i class="fa-sharp fa-light fa-chevrons-right"></i>
            <p>Contact</p>
        </div>

        <div class="upper-part">

            <div class="title-box">
                <h1>Contact Us</h1>

                <div class="content">
                    <i class="fa-regular fa-envelope large-icon"></i>
                    <div class="text-box">
                        <h5>Email us</h5>
                        <p>Please feel free to drop us a line. We will respond as soon as possible.</p>
                        <a href="">Leave a message<i class="fa-regular fa-arrow-right small-icon"></i></a>
                    </div>
                </div>

                <div class="content">
                    <i class="fa-regular fa-user-group large-icon"></i>
                    <div class="text-box">
                        <h5>Careers</h5>
                        <p>Sit ac ipsum leo lorem magna nunc mattis maecenas non vestibulum.</p>
                        <a href="">Send an application<i class="fa-regular fa-arrow-right small-icon"></i></a>
                    </div>
                </div>

            </div>

            <div class="form-box">
                <h2>Get In Contact With Us</h2>
                <p>@Model.DisplayMessage</p>
                <form asp-controller="Contact" asp-action="SendRequest" method="post" novalidate>

                    <div class="input-group">
                        <span asp-validation-for="@Model.ContactModel.FullName"></span>
                        <label asp-for="@Model.ContactModel.FullName"></label>
                        <input asp-for="@Model.ContactModel.FullName" />
                    </div>
                                
                    <div class="input-group">
                        <span asp-validation-for="@Model.ContactModel.Email"></span>
                        <label asp-for="@Model.ContactModel.Email"></label>
                        <input asp-for="@Model.ContactModel.Email" />
                    </div>
                                
                    <div class="select-group">
                        <label asp-for="@Model.ContactModel.Service">Services (optional)</label>
                        <select asp-for="@Model.ContactModel.Service" id="service">
                            <option value="">Choose the service you are interested in</option>
                            <option value="IT Help-Desk">IT Help-Desk</option>
                            <option value="Consulting Business">Consulting business</option>
                        </select>
                    </div>

                    <div class="input-group">
                        <span asp-validation-for="@Model.ContactModel.Message"></span>
                        <label asp-for="@Model.ContactModel.Message"></label>
                        <textarea asp-for="@Model.ContactModel.Message"></textarea>
                    </div>

                    <button class="btn-theme" type="submit">Send Contact Request</button>
                </form>
            </div>

        </div>

    </div>
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d17769.465161170167!2d14.8672459!3d56.17122685!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ssv!2sse!4v1710853996608!5m2!1ssv!2sse" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>
@await Html.PartialAsync("_ValidationScriptPartial")
